{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    
    /* Emit */
    "outDir": "dist",
    
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["es2022"],

    /* Completeness */
    "skipLibCheck": true,

    "typeRoots": ["./node_modules/@types", "./types"],
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ], // Chỉ biên dịch các file trong thư mục src
  "exclude": ["node_modules"]
}